@page "/counter"
@rendermode InteractiveServer
@using shop.shared
@inject IDomainService<Fruit> FruitService

<MyMudProviders />

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudDatePicker Label="Basic example" @bind-Date="selectedTime" />
<MudDatePicker Label="Editable with Placeholder" Editable="true" @bind-Date="selectedTime" Placeholder="Select Date" />
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    public DateTime? selectedTime = DateTime.Now;
    private void IncrementCount()
    {
        currentCount++;
    }
}
