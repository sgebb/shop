@using shop.eventsourcing
@using shop.shared
<MudDialog>
    <TitleContent>New Fruit</TitleContent>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="FruitName" Required="true" />
        <MudTextField Label="Color" @bind-Value="FruitColor" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Guid? ExistingId { get; set; }
    [Parameter] public string? FruitName { get; set; }
    [Parameter] public string? FruitColor { get; set; }
    [Parameter] public Action<eventsourcing.IEvent<shared.Fruit>> OnOkEvent { get; set; }

    void Submit()
    {
        // Validate the input if needed
        if (string.IsNullOrWhiteSpace(FruitName) || string.IsNullOrWhiteSpace(FruitColor))
        {
            // You can show an error message or prevent submission
            return;
        }

        IEvent<Fruit> e;
        if (!ExistingId.HasValue)
        {
            e = new shared.CreateFruitEvent(Guid.NewGuid(), FruitName, FruitColor, DateTimeOffset.Now.AddDays(-1));   
        }
        else
        {
            e = new shared.UpdateFruitEvent(ExistingId.Value, FruitColor, DateTimeOffset.Now.AddDays(-1));
        }

        // Invoke the callback with the created NewFruitEvent
        OnOkEvent?.Invoke(e);

        // Close the dialog
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();

}